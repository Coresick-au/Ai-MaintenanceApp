{
  "name": "maintenance-app",
  "private": true,
  "version": "0.0.0",
  "main": "electron-main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start-electron": "electron .",
    "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env IS_DEV=true electron .\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "map:generate": "node scripts/generate-map.js",
    "build-electron": "npm run build && npm run copy-electron-assets && electron-builder --win --x64",
    "copy-electron-assets": "node -e \"require('fs').cpSync('public/logos', 'dist/logos', { recursive: true });\""
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "jimp": "^1.6.0",
    "lucide-react": "^0.555.0",
    "mermaid": "^11.12.2",
    "pdfjs-dist": "^5.4.394",
    "react": "^19.2.0",
    "react-datepicker": "^8.10.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.5.1"
  },
  "build": {
    "appId": "com.yourcompany.maintenanceapp",
    "productName": "AI-MaintenanceApp",
    "files": [
      "dist/**/*",
      "electron-main.cjs",
      "preload.cjs",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "vite": "^7.2.4",
    "vite-plugin-singlefile": "^2.3.0",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3"
  }
}